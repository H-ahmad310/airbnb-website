<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
    <h3>Creat a New listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
<div class="mb-3">
     <label for="title" class="form-lable">Title</label>  
     <input name= "listing[title]" 
     placeholder="enter a cathy title" 
     type="text" 
     class="form-control "
      required
      >
      <div class="valid-feedback">Title look good!</div>
</div>
<div class="mb-3">
    <label for="Description" class="form-lable">Description</label>  
    <textarea name="listing[description]"
     placeholder="enter description"
      class="form-control" 
      required>
    </textarea >
     <div class="invalid-feedback">pease enter a short Description</div>
</div>
